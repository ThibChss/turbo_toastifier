<%= turbo_frame_tag :flash,
    class: "flash",
    refresh: :morph,
    aria: { label: "Flash messages" },
    data:
    {
      controller: "turbo-toastifier-flash-scroll",
      turbo_toastifier_flash_scroll_max_messages_value: configuration.limit
    } do %>
  <%= render partial: "turbo_toastifier/flash_message" %>
<% end %>
