<%= turbo_frame_tag :flash,
    class: "flash",
    refresh: :morph,
    data:
    {
      controller: "turbo-toastifier-flash-scroll",
      turbo_toastifier_flash_scroll_limit_value: local_assigns.fetch(:limit, 0)
    } do %>
  <%= render partial: "turbo_toastifier/flash_message",
             locals: {
               flash:,
               duration: local_assigns.fetch(:duration, 4)
             } %>
<% end %>
